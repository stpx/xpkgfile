#ifndef _XPKGFILE_DEFS_H_
#define _XPKGFILE_DEFS_H_

#include <xbps.h>

#define PACKAGE_NAME    "@PACKAGE_NAME@"
#define PACKAGE_VERSION "@PACKAGE_VERSION@"

#define PATH_MAX 512

#ifndef XPKGFILE_CACHE_PATH
#define XPKGFILE_CACHE_PATH "/var/cache/xpkgfile"
#endif

struct config {
	const char *pattern;
	char plist[PATH_MAX];
	bool verbose;
};

int update (struct xbps_handle *, struct config *);
int search (struct xbps_handle *, void (*fn)(xbps_dictionary_t, const char *, struct config *), struct config *);

/* search callbacks */
void list_files (xbps_dictionary_t, const char *, struct config *);
void match_files_by_pattern (xbps_dictionary_t, const char *, struct config *);

bool cache_exists (const char *);

void err_printf (const char *, ...);

#endif /* _XPKGFILE_DEFS_H_ */
